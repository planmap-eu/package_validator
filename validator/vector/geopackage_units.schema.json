{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "title": "Match Geopackage's 'Units' layer columns list",

  "$comment": "Works for, e.g., ['name','geometry','code','bla'], but not for ['bla','name','geometry','code']",
  "$example": ["name","geometry","code","another-column"],

  "definitions": {

      "point_coordinates": {
          "type": "array",
          "items": [
              {
                  "type": "number"
              }
          ],
          "minItems": 2,
          "maxItems": 3
      },

      "line_coordinates": {
          "type": "array",
          "items": [
              {
                  "$ref": "#/definitions/point_coordinates"
              }
          ],
          "minItems": 2
      },

      "polygon_coordinates": {
          "type": "array",
          "items": [
              {
                  "$ref": "#/definitions/line_coordinates"
              },
              { "minItems": 4 }
          ],
          "minItems": 1,
          "maxItems": 1
      },

      "polygon_geometry": {
          "type": "object",
          "properties": {
              "type": {
                  "const": "Polygon"
              },
              "coordinates": {
                  "$ref": "#/definitions/polygon_coordinates"
              }
          }
      }
  },


  "type": "object",
  "properties": {

    "Unit": {
        "type": "string"
    },

    "RGB": {
        "type": "string"
    },

    "geometry": {
            "$ref": "#/definitions/polygon_geometry"
    }
  }
}
